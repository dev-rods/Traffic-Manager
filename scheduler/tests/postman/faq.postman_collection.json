{
  "info": {
    "name": "Clinic Scheduler - FAQ",
    "description": "FAQ endpoints for Clinic Scheduler",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://YOUR_API_GATEWAY_URL.execute-api.us-east-1.amazonaws.com",
      "type": "string"
    },
    {
      "key": "ENVIRONMENT",
      "value": "dev",
      "type": "string"
    },
    {
      "key": "API_KEY",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    },
    {
      "key": "clinicId",
      "value": "",
      "type": "string"
    },
    {
      "key": "faqId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create FAQ Item",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Set faqId from response', function () {",
              "    if (pm.response.code === 201) {",
              "        var jsonData = pm.response.json();",
              "        pm.environment.set('faqId', jsonData.id);",
              "    }",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"question_key\":\"EQUIPMENT\",\"question_label\":\"Qual equipamento voces usam?\",\"answer\":\"Trabalhamos com o Soprano Ice Platinum, uma das tecnologias mais avancadas do mundo em depilacao a laser.\",\"display_order\":1}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/faq",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "faq"
          ]
        }
      }
    },
    {
      "name": "Create FAQ Item (Session Interval)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"question_key\":\"SESSION_INTERVAL\",\"question_label\":\"Qual o intervalo entre sessoes?\",\"answer\":\"As sessoes tem intervalo medio de 30 dias, ou seja, voce realiza aproximadamente 1 sessao por mes.\",\"display_order\":2}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/faq",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "faq"
          ]
        }
      }
    },
    {
      "name": "List FAQ",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/faq",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "faq"
          ]
        }
      }
    },
    {
      "name": "Update FAQ Item",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"answer\":\"Resposta atualizada\",\"display_order\":5}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/faq/{{faqId}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "faq",
            "{{faqId}}"
          ]
        }
      }
    }
  ]
}
