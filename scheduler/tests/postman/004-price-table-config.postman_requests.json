{
  "info": {
    "name": "Clinic Scheduler - 004 Price Table Configuration",
    "description": "Requests for configuring the price table (services with pricing)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://YOUR_API_GATEWAY_URL.execute-api.us-east-1.amazonaws.com",
      "type": "string"
    },
    {
      "key": "ENVIRONMENT",
      "value": "dev",
      "type": "string"
    },
    {
      "key": "API_KEY",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    },
    {
      "key": "clinicId",
      "value": "",
      "type": "string"
    },
    {
      "key": "serviceId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Service with Price",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Depilacao a laser - Axilas\",\"duration_minutes\":30,\"price_cents\":12000,\"description\":\"Sessao de depilacao a laser na regiao das axilas\"}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/services",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "services"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Service has price_cents\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.service.price_cents).to.eql(12000);",
              "    pm.collectionVariables.set(\"serviceId\", jsonData.service.id);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Service without Price",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Avaliacao inicial\",\"duration_minutes\":20,\"description\":\"Consulta de avaliacao sem custo definido\"}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/services",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "services"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Service has null price_cents\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.service.price_cents).to.be.null;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Service Price",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"price_cents\":18000}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/services/{{serviceId}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "services",
            "{{serviceId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Price updated to 18000\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.service.price_cents).to.eql(18000);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "List Services (Verify Prices)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/services",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "services"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is an array with services\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.services).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Deactivate Service (Remove from Price Table)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"active\":false}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/services/{{serviceId}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "services",
            "{{serviceId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Service deactivated\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.service.active).to.be.false;",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
