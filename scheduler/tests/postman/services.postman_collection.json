{
  "info": {
    "name": "Clinic Scheduler - Services",
    "description": "API collection for managing clinic services",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://YOUR_API_GATEWAY_URL.execute-api.us-east-1.amazonaws.com",
      "type": "string"
    },
    {
      "key": "ENVIRONMENT",
      "value": "dev",
      "type": "string"
    },
    {
      "key": "API_KEY",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    },
    {
      "key": "clinicId",
      "value": "",
      "type": "string"
    },
    {
      "key": "serviceId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Service",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Depilacao a laser\",\"duration_minutes\":45,\"price_cents\":15000,\"description\":\"Sessao avulsa de depilacao a laser com Soprano Ice\"}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/services",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "services"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Set serviceId from response\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set(\"serviceId\", jsonData.id);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "List Services",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/services",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "services"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Service",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"price_cents\":18000,\"active\":true}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/services/{{serviceId}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "services",
            "{{serviceId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Service (Missing Fields)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Incompleto\"}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}/services",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}",
            "services"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
