{
  "info": {
    "name": "Clinic Scheduler - Clinics",
    "description": "API collection for Clinic Scheduler clinics management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://YOUR_API_GATEWAY_URL.execute-api.us-east-1.amazonaws.com",
      "type": "string"
    },
    {
      "key": "ENVIRONMENT",
      "value": "dev",
      "type": "string"
    },
    {
      "key": "API_KEY",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    },
    {
      "key": "clinicId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Clinic",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Laser Beauty SP\",\"phone\":\"5511988880000\",\"address\":\"Rua Exemplo, 123 - SP\",\"business_hours\":{\"mon\":{\"start\":\"09:00\",\"end\":\"18:00\"},\"tue\":{\"start\":\"09:00\",\"end\":\"18:00\"},\"wed\":{\"start\":\"09:00\",\"end\":\"18:00\"},\"thu\":{\"start\":\"09:00\",\"end\":\"18:00\"},\"fri\":{\"start\":\"09:00\",\"end\":\"18:00\"}},\"buffer_minutes\":10}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status 201\", () => {",
              "  pm.response.to.have.status(201);",
              "});",
              "var json = pm.response.json();",
              "pm.test(\"Has clinicId\", () => {",
              "  pm.expect(json.clinicId).to.not.be.undefined;",
              "});",
              "if (json.clinicId) {",
              "  pm.collectionVariables.set(\"clinicId\", json.clinicId);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "List Clinics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status 200\", () => {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Clinic",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "{{ENVIRONMENT}}",
            "clinics",
            "{{clinicId}}"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status 200\", () => {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Has clinic\", () => {",
              "  pm.expect(pm.response.json().clinic).to.not.be.undefined;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update Clinic",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "x-api-key",
            "value": "{{API_KEY}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"phone\":\"5511977770000\",\"buffer_minutes\":15}"
        },
        "url": {
          "raw": "{{BASE_URL}}/{{ENVIRONMENT}}/clinics/{{clinicId}}",
