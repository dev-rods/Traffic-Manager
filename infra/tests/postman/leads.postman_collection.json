		{
			"name": "List Leads",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has leads array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql(\"SUCCESS\");",
							"    pm.expect(jsonData.leads).to.be.an('array');",
							"    pm.expect(jsonData).to.have.property('count');",
							"});",
							"",
							"// Save first leadId if available",
							"var jsonData = pm.response.json();",
							"if (jsonData.leads && jsonData.leads.length > 0) {",
							"    pm.collectionVariables.set(\"leadId\", jsonData.leads[0].leadId);",
